<div class="postTitle">
  <%= @user.name %>’s page
</div>
<% @posts.each do |post| %>
  <div class="content">
    <div class="content__left">
      <%= post.created_at.strftime('%Y年%m月%d日') %>
        <div class="content__left__name">
          <%= post.user.name %> 
        </div>
        <div class="content__left__image">
          <%= image_tag post.image.url, class: "content__left__image"%>
          <%= link_to "a", post_path(post.id), class:"content__left__image__url" %>
        </div>
    </div>
    <div class="content__right">
      <div class="content__right__top">
        <%= link_to post.title, post_path(post.id), class:"content__right__top" %>
      </div>
      <div class="content__right__bottom">
        <%= post.content %>
      </div>
    </div>
  </div>
<% end %>
<div class="content__page">
<%= paginate(@posts) %>
</div> 